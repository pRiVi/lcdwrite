void writeString (char *str, int cursorposistion, int showcursor) {
   int j;
   int strl = strlen(str);
   for (j = 0; j<80; j++) {
      int k = j;
      if (j > 16) k -= 24;
      if (showcursor && ((k+1) == cursorposistion)) {
         writeChar('_');
      } else if (k < strl) {
         writeChar(str[k]);
      } else { 
         writeChar(' ');
      }
   }
}

void writeChar(char mychar) {
   int k;
   int feld[129];
   for (k=128; k != 0; k=k>>1) {
      int bit;
      bit = (mychar & k) != 0 ? 1 : 0;
      feld[k] = bit;
   }
   // set pin 20 (rs) to data mode
   pinwrite(rs, 1);
   trans8bit(feld[128], feld[64], feld[32], feld[16], feld[8], feld[4], feld[2], feld[1]);
}

void trans8bit(a, b, c, d, e, f, g, h) {
    trans4bit(a, b, c, d);
    trans4bit(e, f, g ,h);
}

void trans4bit(a, b, c, d) {
    pinwrite(data0, a);
    pinwrite(data1, b);
    pinwrite(data2, c);
    pinwrite(data3, d);
    pinwrite(en, 1);
    pinwrite(en, 0);
}

void pinmode(pin, flag) {
   struct gpio_pin_ctl op;
   bzero(&op, sizeof(op));
   op.gp_pin = pin;
   op.gp_flags = flag;
   if (ioctl(devfd, GPIOPINCTL, &op) == -1) {
      err(1, "GPIOPINCTL");
   }
}

void pinwrite(pin, value) {
    struct gpio_pin_op op;
    bzero(&op, sizeof(op));
    op.gp_pin = pin;
    op.gp_value = (value == 0 ? GPIO_PIN_LOW : GPIO_PIN_HIGH);
    if (ioctl(devfd, GPIOPINWRITE, &op) == -1) {
        err(1, "GPIOPINWRITE");
   }
} 

int pinread(int pin) {
   struct gpio_pin_op op;
   bzero(&op, sizeof(op));
   op.gp_pin = pin;

   if (ioctl(devfd, GPIOPINREAD, &op) == -1) {
       err(1, "GPIOPINWRITE");
   }
   return op.gp_value;
}

int timeChanged(long *last, int seconds) {
   long jetzt = getTime();
   if ((*last+seconds) > jetzt) return 0;
   *last = jetzt;
   return 1;
}

long getTime() {
   struct timeval now;
   struct timezone zone;
   bzero(&now, sizeof(now));
   bzero(&zone, sizeof(zone));
   if (gettimeofday(&now, &zone)) {
      err(1, "GETTIMEOFDAY");
   }
   return now.tv_sec;
}

